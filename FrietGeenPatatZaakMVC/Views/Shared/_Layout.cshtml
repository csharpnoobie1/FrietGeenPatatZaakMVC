<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FrietGeenPatatZaakMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-primary text-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="#">FrietGeenPatatZaakMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="ProductsView" asp-action="Index">Products</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex align-items-center">
                    <input class="form-control me-2" type="search" placeholder="Zoek..." aria-label="Search">
                    <a href="#" class="text-white ms-3">Account</a>
                    <a href="#" class="text-white ms-3">Winkelmand</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-primary text-white mt-5">
        <div class="container py-3">
            <p class="mb-0">&copy; 2024 - FrietGeenPatatZaakMVC - <a href="#" class="text-white">Privacybeleid</a></p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
